//-------------------------------------------------------------------------------------------
//
// Zombieman spawner
//
//-------------------------------------------------------------------------------------------
actor S7_ZombiemanSpawner : S7_MonsterSpawnerBase replaces zombieman {
    states {
    SpawnMonster:
        TNT1 A 0 A_SpawnItemEx ("S7_ScorpsTrooper", 0, 0, 0, 0, 0, 0, 0, SXF_MSpawner, 0)
        goto Prepare
    }
}

