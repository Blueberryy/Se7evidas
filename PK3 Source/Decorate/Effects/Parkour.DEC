//-------------------------------------------------------------------------------------------
//
// Multijump marker
//
//-------------------------------------------------------------------------------------------
actor S7_MultiJump_Marker {
    height 2
    radius 2
    alpha 1.0
    renderStyle add

    +noBlockmap +noGravity +noTeleport +cannotPush
    +noInteraction +clientsideOnly +forceXYBillboard
    -noBlockmap
    states {
    Spawn:
        MJMP A 10 bright light (MJMPMARKER)
        "----" A 1 bright light (MJMPMARKER) A_FadeOut (0.05)
        wait
    }
}