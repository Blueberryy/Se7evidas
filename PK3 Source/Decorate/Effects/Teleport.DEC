Actor S7_TeleportFog {
    +NoInteraction +NoTeleport +NoGravity +NoBlockmap
    RenderStyle Add
    States {
    Spawn:
        TFOG A 36 Bright
    Fade:
        TFOG A 1 Bright A_FadeOut (0.1)
        Loop
    }
}

Actor S7_TeleportFogSpawner Replaces TeleportFog {
    States {
    Spawn:
        TFOG A 0
        TFOG A 0 A_SpawnItemEx ("S7_TeleportFog", 0.0, 15.0)
        Stop
    }
}