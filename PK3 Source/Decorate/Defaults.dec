// From Samsara
actor Boolean : inventory {
    inventory.MaxAmount 1
    +inventory.Undroppable -inventory.InvBar
}

actor Counter : inventory {
    inventory.MaxAmount 0x7FFFFFFF
    +inventory.Undroppable -inventory.InvBar
}

