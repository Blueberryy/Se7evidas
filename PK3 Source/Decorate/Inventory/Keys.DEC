// Red keycard
//
//-------------------------------------------------------------------------------------------
actor S7_RedKeycard : redCard replaces redCard {
    inventory.icon "HUDKYRED"
    species RedCard
    scale 0.6

    states {
    Spawn:
        S7KR A -1
        stop
    }
}

