// To make testing and stuff easier
actor S7_CheatThingy : customInventory {
    inventory.icon TNT1A0
    inventory.pickupMessage ""
    inventory.maxAmount 2
    inventory.amount 1
    inventory.pickupSound ""
    inventory.useSound ""
    +inventory.undroppable
    +inventory.autoActivate
    +inventory.alwaysPickup
    states {
    Spawn:
        TNT1 A 0
        stop
    Use:
    Pickup: // Give things here
        TNT1 A 0 A_GiveInventory ("S7_BackpackToken", 1)
        // XP System
        /*TNT1 A 0 A_GiveInventory ("S7_Stats_System_Strength",   25)
        TNT1 A 0 A_GiveInventory ("S7_Stats_System_Agility",    25)
        TNT1 A 0 A_GiveInventory ("S7_Stats_System_Vitality",   25)
        TNT1 A 0 A_GiveInventory ("S7_Stats_System_Defense",    25)
        TNT1 A 0 A_GiveInventory ("S7_Stats_System_Will",       25)
        TNT1 A 0 A_GiveInventory ("S7_Stats_System_Magic",      25)
        TNT1 A 0 A_GiveInventory ("S7_Stats_System_Technology", 25)*/
        // Inventory
        TNT1 A 0 A_GiveInventory ("S7_BerserkPickup", 0x7FFFFFFF)
        TNT1 A 0 A_GiveInventory ("S7_Medikit",       0x7FFFFFFF)
        TNT1 A 0 A_GiveInventory ("S7_Stimpack",      0x7FFFFFFF)
        TNT1 A 0 A_GiveInventory ("S7_Canteen",       0x7FFFFFFF)
        // Upgrades
        TNT1 A 0 A_GiveInventory ("S7_UpgradeRadar", 1)
        TNT1 A 0 A_GiveInventory ("S7_UpgradeSlot1", 1)
        TNT1 A 0 A_GiveInventory ("S7_UpgradeSlot2", 1)
        TNT1 A 0 A_GiveInventory ("S7_UpgradeSlot3", 1)
        TNT1 A 0 A_GiveInventory ("S7_UpgradeSlot4", 1)
        TNT1 A 0 A_GiveInventory ("S7_UpgradeSlot5", 1)
        // Cash
        TNT1 A 0 A_GiveInventory ("S7_CashGreater", 30000)
        // Misc
        TNT1 A 0 ACS_NamedExecuteAlways ("S7_GiveEverythingCheat", 0)
        stop
    }
}